{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalAsyncFunctions": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "AsyncTest.ts",
        "typings/es6-promise/es6-promise.d.ts",
        "typings/tsd.d.ts"
    ],
    "exclude": [],
    "externalTranspiler": {
        "name": "babel",
        "options": {
            "optional": [
                "runtime"
            ]
        }
    }
}
